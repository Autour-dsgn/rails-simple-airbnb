<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/flats">Simple Airbnb</a>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="ms-auto flex">
        <p><%= link_to "Add flat", new_flat_path, class: 'btn btn-outline-primary my-2 my-sm-0 ms-2' %></p>
      </div>
    </div>
  </div>
</nav>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <% @flats.each do |flat| %>
        <div class="flat-card" >
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h3><%= flat.name %></h3>
            </div>
              <p><i><%= flat.description %></i></p>
              <p><i class="fa-solid fa-location-dot"></i> <%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <p><i class="fa-solid fa-person"></i> <%= flat.number_of_guests %></p>
              </div>
              <div class="flex">
                <p><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat), class: 'text-primary'%>
            <%= link_to "Edit", edit_flat_path(flat), class: 'text-warning' %>
            <%= link_to "Remove",
              flat_path(flat),
              method: :delete,
              data: { confirm: "Are you sure you want to delete #{flat.name}?" },
              class: 'text-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
